<h1>Edit your profile</h1>

<div class="middle">
{{#rows}}
<form class="form" method='POST'>
            <input type='text' name='firstName' placeholder='FirstName' value="{{first}}">
            <input type='text' name='lastName' placeholder='Last Name' value="{{last}}"">
            <input type='text' name='email' placeholder='Email address' value="{{email}}">
            <input type='text' name='password' placeholder='Password' autocomplete='off'>

            <input type='text' name='age' placeholder='Age' value="{{age}}">
            <input type='text' name='city' placeholder='City' value="{{city}}">
            <input type='text' name='url' placeholder='Homepage' value="{{url}}">
{{/rows}}

             <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button id="button"> Update </button>
        </form>
</div>
